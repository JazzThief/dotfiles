{
    // file system
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    // terminal
    "terminal.integrated.enableFileLinks": "on",
    "terminal.integrated.rendererType": "dom",
    "terminal.explorerKind": "external",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "Monaco",
    // git
    "git.ignoreMissingGitWarning": true,
    "git.confirmSync": false,
    // editor & looks
    "editor.inlineSuggest.enabled": true,
    "editor.codeLens": true,
    "editor.stickyScroll.enabled": true,
    "editor.semanticHighlighting.enabled": false,
    "editor.fontFamily": "SF Mono",
    "editor.fontSize": 16,
    "editor.suggestFontSize": 12,
    "scm.inputFontSize": 12,
    "editor.cursorStyle": "block",
    "editor.wordWrapColumn": 140,
    "editor.wordWrap": "on",
    "workbench.iconTheme": "Monokai Pro (Filter Spectrum) Monochrome Icons",
    "workbench.colorTheme": "Just Black",
    // theme overrides
    "workbench.colorCustomizations": {
        "terminal.background": "#000000",
        "terminal.foreground": "#5fff1f",
        "terminalCursor.foreground": "#75ff3e",
        "statusBar.debuggingBackground": "#704fbe",
        "statusBar.debuggingForeground": "#FFFFFF",
        "editor.codeLensFontFamily": "SF Mono",
    },
    "editor.tokenColorCustomizations":{
        "textMateRules": [
            {
                "scope": "keyword.operator.bitwise.python",
                "settings": {
                    "fontStyle": "bold"
                }
            }
        ]
    },
    // suggestions
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.includeLanguages": {
        "html.erb": "html"
    },
    "emmet.excludeLanguages": [
        "markdown"
    ],
    // zen mode
    "zenMode.hideActivityBar": false,
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,
    // extensions
    "extensions.ignoreRecommendations": true,
    "settingsSync.ignoredExtensions": [
        "shakram02.bash-beautify",
        "mattn.lisp",
        "ms-vscode-remote.remote-wsl",
        "rheller.alive",
        "ms-vscode.cpptools",
        "dart-code.dart-code",
        "dart-code.flutter"
    ],
    // python
    "python.autoComplete.extraPaths": [],
    "python.analysis.extraPaths": [],
    // jupyter
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    // javascript
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // cpp
    "C_Cpp.updateChannel": "Insiders",
    // misc
    "security.workspace.trust.untrustedFiles": "open",
    "redhat.telemetry.enabled": false,
    "telemetry.telemetryLevel": "off",
}